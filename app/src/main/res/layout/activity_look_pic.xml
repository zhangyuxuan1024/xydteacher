<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.iclassmate.teacherspace.ui.activity.weike.LookPicActivity">

    <LinearLayout
        android:id="@+id/look_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/app_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/weike_img_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="center"
            android:src="@drawable/fragment_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="图片详情"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/weike_tv_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingRight="12dp"
            android:text="选择"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </LinearLayout>

    <net.iclassmate.teacherspace.view.weike.ZoomPicView
        android:id="@+id/weike_zoom_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
