<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="23dp"
    android:layout_gravity="right|center_vertical"
    android:background="@drawable/rounded_rectangle_rg"
    android:orientation="horizontal">

    <RadioButton
        android:id="@+id/single_grade_rb1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:background="@drawable/single_test_rg_bg_selector"
        android:button="@null"
        android:gravity="center"
        android:text="数值"
        android:textColor="@drawable/fragment_single_rb_color_selector"
        android:textSize="12sp" />

    <RadioButton
        android:id="@+id/single_grade_rb2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:background="@drawable/single_test_rg_bg_selector"
        android:button="@null"
        android:gravity="center"
        android:text="排名"
        android:textColor="@drawable/fragment_single_rb_color_selector"
        android:textSize="12sp" />

    <RadioButton
        android:id="@+id/single_grade_rb3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:background="@drawable/single_test_rg_bg_selector"
        android:button="@null"
        android:gravity="center"
        android:text="人数"
        android:textColor="@drawable/fragment_single_rb_color_selector"
        android:textSize="12sp" />
</RadioGroup>