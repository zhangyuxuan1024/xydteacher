<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eeeeee">

    <View
        android:id="@+id/fragment_view_bg"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#eeeeee" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/fragment_title_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="12dp"
            android:background="@color/white"
            android:scaleType="fitStart"
            android:src="@mipmap/img_shitinandu" />
        <TextView
            android:id="@+id/fragment_generall_all_listview_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top 50"
            android:textColor="@color/gray"
            android:textSize="13sp"
            android:visibility="invisible"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="30dp"/>
    </FrameLayout>

    <net.iclassmate.teacherspace.view.FullListView
        android:id="@+id/fragment_ListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/white"
        android:divider="#dddddd"
        android:dividerHeight="1dp" />
</LinearLayout>