<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/fragment_view_bg"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#eeeeee" />

    <ImageView
        android:id="@+id/fragment_title_kgtj_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:background="@color/white"
        android:scaleType="fitStart"
        android:src="@mipmap/img_shitinandu" />

    <TextView
        android:id="@+id/fragment_title_kgtj_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:background="@color/white"
        android:gravity="right"
        android:paddingBottom="10dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:text="※红色代表答案正确"
        android:textColor="#bbbbbb"
        android:textSize="11sp" />

    <net.iclassmate.teacherspace.view.FullListView
        android:id="@+id/fragment_kgtj_ListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:divider="#dddddd"
        android:dividerHeight="1dp" />
</LinearLayout>