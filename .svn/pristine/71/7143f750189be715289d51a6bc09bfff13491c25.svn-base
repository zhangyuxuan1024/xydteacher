<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp">
        <ImageView
            android:id="@+id/general_text_item_iv"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@mipmap/yuwen"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp" />
       <TextView
           android:id="@+id/general_text_item_tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="语文试卷"
           android:layout_centerVertical="true"
           android:textSize="15sp"
           android:layout_toRightOf="@+id/general_text_item_iv"
           android:layout_marginLeft="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成绩 : "
            android:textSize="12sp"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:layout_toLeftOf="@+id/general_text_item_score"/>
        <TextView
            android:id="@+id/general_text_item_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="98"
            android:textSize="15dp"
            android:textColor="#f83045"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12sp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"
        android:layout_marginTop="10dp"/>

    <HorizontalScrollView
        android:id="@+id/general_text_item_horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="15dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/general_text_item_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="12dp"
            android:orientation="horizontal">

        </LinearLayout>

    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#DDDDDD"/>

</LinearLayout>