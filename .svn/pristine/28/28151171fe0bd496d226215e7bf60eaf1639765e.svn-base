<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/video_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e5f3f2"
            android:scaleType="fitXY" />


        <ImageView
            android:id="@+id/video_image_check_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#88013233" />

        <ImageView
            android:id="@+id/video_image_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/ic_shipin" />

        <ImageView
            android:id="@+id/video_image_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:src="@mipmap/ic_weixuan" />
    </FrameLayout>

    <TextView
        android:id="@+id/video_tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:lines="2"
        android:text="小学五年级"
        android:textColor="#333333"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/video_tv_time_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-04-07"
            android:textColor="#888888"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/video_tv_time_long"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="5:21"
            android:textColor="#888888"
            android:textSize="10dp" />
    </LinearLayout>
</LinearLayout>