<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical">

    <View
        android:id="@+id/fragment_view_bg"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#eeeeee" />

    <ImageView
        android:id="@+id/fragment_title_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:background="@color/white"
        android:scaleType="fitStart"
        android:src="@mipmap/img_xuebatongji" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:background="@color/white"
        android:orientation="vertical">

        <net.iclassmate.teacherspace.view.LineViewStudent
            android:id="@+id/fragment_single_class_lineview"
            android:layout_width="122dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginRight="37dp" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/fragment_single_class_barchart"
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
    </LinearLayout>

    <net.iclassmate.teacherspace.view.FullListView
        android:id="@+id/fragment_grade_xbtj_ListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:background="@color/white"
        android:divider="#dddddd"
        android:dividerHeight="1dp"
        android:paddingTop="30dp" />
</LinearLayout>