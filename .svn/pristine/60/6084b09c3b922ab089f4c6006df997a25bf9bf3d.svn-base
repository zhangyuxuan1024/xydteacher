<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingTop="15dp">

    <FrameLayout
        android:layout_width="185dp"
        android:layout_height="123dp">

        <ImageView
            android:id="@+id/single_paper_item_iv"
            android:layout_width="185dp"
            android:layout_height="123dp"
            android:background="@drawable/single_paper"
            android:padding="1dp"
            android:scaleType="centerInside"
            android:src="@mipmap/img_shijuan" />

        <net.iclassmate.teacherspace.view.MyScoreView
            android:id="@+id/single_paper_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <TextView
        android:id="@+id/single_paper_item_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:text="第(1)页"
        android:textColor="#999999"
        android:textSize="11sp" />
</LinearLayout>